<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="default phone number"
        android:title="Default phone number"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="notification type"
        android:title="Default notification type"
        android:defaultValue="0"
        android:entries="@array/pref_default_notification_values"
        android:entryValues="@array/pref_default_notification_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="boundary"
        android:title="Boundary"
        android:defaultValue="20"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>